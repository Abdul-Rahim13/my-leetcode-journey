/**
 * @param {number[]} nums1
 * @param {number[]} nums2
 * @return {number}
 */
var findMedianSortedArrays = function(nums1, nums2) {
    let merged = nums1.concat(nums2);
    merged.sort((a,b) => a - b);

    let n = merged.length;
    // If odd length, median is the middle element
    if(n % 2 === 1){
        return merged[Math.floor(n/2)];
    }
    else{
        // If even length, median is average of two middle elements
        return (merged[n/2 - 1] + merged[n/2])/2;
    }
};
